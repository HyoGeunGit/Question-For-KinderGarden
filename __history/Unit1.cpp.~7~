void __fastcall TForm1::RoundRect1Click(TObject *Sender)
{
	if (Dap=="1234") {
	ShowMessage("Succed!!!!!!!!");
	RoundRect4->Visible=true;
	JUM++;
	}
	else
	{
	ShowMessage("failed......");
	JUM--;
	}
}
//---------------------------------------------------------------------------

void __fastcall TForm1::RoundRect4Click(TObject *Sender)
{
	Panel1->Visible=true;
	Panel1->BringToFront();
	g=0;
	RoundRect4->Visible=false;
	Label19->BringToFront();
	Label19->Visible=true;

}
